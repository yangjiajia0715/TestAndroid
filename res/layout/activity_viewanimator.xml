<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#969696"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_viewanimator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="btn_viewanimator" />

            <ViewAnimator
                android:id="@+id/viewanimator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ff0">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" ScrollView ViewAnimator" />
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="hhhhhh" />
            </ViewAnimator>

            <TextView
                android:id="@+id/btn_textswitcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextSwitcher" />

            <TextSwitcher
                android:id="@+id/text_switcher_animator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#0ff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" ScrollView text_switcher_animator01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TextSwitcher text_switcher_animator02" />
            </TextSwitcher>

            <TextView
                android:id="@+id/btn_imageswitcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="btn_imageswitcher" />

            <ImageSwitcher
                android:id="@+id/image_switcher_animator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fff">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/liushishi"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ImageSwitcher>

        </LinearLayout>

    </ScrollView>
</LinearLayout>