<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dex_get_code_Cache"
        android:layout_width="wrap_content"
        android:text="getCodeCacheDir"
        style="@style/home_text_style"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#2b2b2b"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dex_getexternalstoragedirectory"
        android:layout_width="wrap_content"
        android:text="getExternalStorageDirectory"
        style="@style/home_text_style"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#2b2b2b"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextSwitcher
        android:id="@+id/dex_text_switcher"
        android:layout_width="match_parent"
        android:background="@color/accent"
        android:layout_height="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="show"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#2b2b2b"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="show"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#2b2b2b"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    </TextSwitcher>

    <TextView
        android:id="@+id/dex_test_show"
        android:layout_width="wrap_content"
        android:text="show"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#2b2b2b"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

</LinearLayout>