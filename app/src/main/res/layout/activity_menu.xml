<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_tool_bar" />

    <TextView
        android:id="@+id/tv_option_menu"
        style="@style/Home_text_style2"
        android:text="OptionMenu" />

    <TextView
        android:id="@+id/tv_context_menu"
        style="@style/Home_text_style2"
        android:text="ContextMenu" />

    <TextView
        android:id="@+id/tv_action_mode"
        style="@style/Home_text_style2"
        android:text="ActionMode" />


    <TextView
        android:id="@+id/tv_pop_menu"
        style="@style/Home_text_style2"
        android:layout_width="200dp"
        android:text="PopMenu" />

    <TextView
        android:id="@+id/tv_pop_menu_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/accentLight"
        android:padding="8dp"
        android:text="tv_pop_menu_other" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/listviewright"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>