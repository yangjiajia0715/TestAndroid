<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown"
    android:layout_width="match_parent"
    android:layout_height="58dip">

    <!-- Icons come first in the layout, since their placement doesn't depend on
         the placement of the text views. -->
    <ImageView
        android:id="@android:id/icon1"
        style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Icon1"
        android:layout_width="@dimen/abc_dropdownitem_icon_width"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        tools:src="@drawable/arrow_left_dart"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/edit_query"
        style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Query"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:src="@drawable/ic_math"
        tools:visibility="visible" />

    <ImageView
        android:id="@id/android:icon2"
        style="@style/RtlOverlay.Widget.AppCompat.Search.DropDown.Icon2"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- The subtitle comes before the title, since the height of the title depends on whether the
         subtitle is visible or gone. -->
    <TextView
        android:id="@android:id/text2"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="29dip"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="top"
        android:paddingBottom="4dip"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle"
        android:visibility="gone"
        tools:text="hhhhhhhhh"
        tools:visibility="visible" />

    <!-- The title is placed above the subtitle, if there is one. If there is no
         subtitle, it fills the parent. -->
    <TextView
        android:id="@android:id/text1"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/text2"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceSearchResultTitle"
        tools:text="text1"
        tools:visibility="visible" />

</RelativeLayout>