<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/checkedtextview_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_f8f8f8"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/temp_item_date" />

    <CheckedTextView
        android:id="@+id/checkedtextview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_f8f8f8"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/temp_item_date" />

    <CheckedTextView
        android:id="@+id/checkedtextview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_f8f8f8"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/temp_item_date" />

    <TextView
        android:id="@+id/checked_tectview_get_checkids"
        style="@style/home_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_checktext_item_tmp"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/arrow_left_dart"
        android:gravity="center"
        android:text="获取选择的ids"
        android:textColor="#2b2b2b"
        android:textSize="15sp" />

    <TextView
        style="@style/home_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/arrow_left_dart"
        android:gravity="center"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="@string/temp_item_date"
        android:textColor="#2b2b2b"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="@color/color_f8f8f8"
        android:dividerHeight="2dp"
        android:listSelector="@drawable/selector_checktext_item"
        android:scrollbars="none" />
</LinearLayout>