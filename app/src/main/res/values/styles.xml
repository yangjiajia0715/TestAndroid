<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         &lt;!&ndash; Customize your theme here. &ndash;&gt;
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
     </style>-->
    <!--android:Theme.Light-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.FitSystemWindown"></style>


    <style name="home_text_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_click_selector</item>
    </style>

    <style name="Home_text_style2" parent="home_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">

        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!--Widget.AppCompat.Light.PopupMenu.Overflow-->
    <!--<item name="overlapAnchor">false</item>-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_drop_down</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">-20dip</item>
        <item name="android:dropDownWidth">100dp</item>
    </style>

    <!--no use-->
    <style name="OverflowMenuStyle222" parent="Widget.AppCompat.Light.PopupMenu.Overflow" />

    <style name="OverflowActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <!-- <item name="actionModeBackground">@color/app_color_normal</item>-->
        <!-- <item name="actionModeCloseDrawable">@drawable/drop_down_setting</item>-->

        <item name="background">@color/app_color_normal</item>
        <item name="backgroundSplit">@color/primary</item>
        <item name="height">60dp</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle
        </item>
        <!-- <item name="closeItemLayout">@layout/abc_action_mode_close_item_material</item>-->
    </style>

    <style name="app_bar_style">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- <item name="android:windowActionBarOverlay" >true</item>-->
    <!--Widget.AppCompat.ActionMode-->
    <style name="ActionModeTheme" parent="AppTheme">
        <!--不放开也可以覆盖-->
        <!--<item name="android:windowActionModeOverlay" >true</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeStyle">@style/OverflowActionModeStyle</item>
        <item name="actionModeCloseDrawable">@drawable/arrow_left_dart</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--   <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>-->
        <!--  <item name="android:actionMenuTextColor">@color/actionbar_text</item>-->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- general styles for the action bar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@drawable/bg_accumulated_income</item>
        <item name="android:backgroundStacked">@drawable/bg_account</item>
        <item name="android:backgroundSplit">@drawable/bg_et_large</item>-->
        <item name="android:height">100dp</item>-->
        <item name="height">100dp</item>-->

    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#f0f</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#ffff00</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--没用-->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>

    </style>

    <style name="GreenText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="TextTheme" parent="android:Theme.Light">

    </style>

    <style name="CommonButtonStyle" parent="home_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--default:false,false-->
    <style name="AppTheme.ActiomMode">
        <!--<item name="android:windowActionBarOverlay" >true</item>-->
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@drawable/bg_account</item>
        <!-- <item name="actionModeSplitBackground">?attr/colorPrimaryDark</item>-->
        <item name="actionModeSplitBackground">@color/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_done</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
    </style>

    <style name="bottom_selcect_dialog_theme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景有灰度 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_fade_out</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/app_color_normal</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">#2b2b2b</item>
        <!--<item name="colorControlActivated">@color/red</item>-->
        <item name="textColorAlertDialogListItem">@color/sample_blue</item>
        <item name="colorAccent">@color/app_color_normal</item>
        <item name="android:textColorPrimary">@color/green</item>
        <!--  <item name="android:windowBackground">@drawable/ic_politics</item>-->
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowNoTitle" >true</item>-->
        <!--<item name="android:colorAccent" >@color/app_color_normal</item>-->
    </style>

    <!-- <item name="android:windowActionBarOverlay" >true</item>-->
    <!--Widget.AppCompat.ActionMode-->
    <style name="ListviewChoice" parent="AppTheme">
        <!--不放开也可以覆盖-->
        <!--<item name="android:windowActionModeOverlay" >true</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!--  <item name="android:actionModeBackground">@color/colorPrimary</item>
          <item name="actionModeStyle">@style/OverflowActionModeStyle</item>
          <item name="actionModeCloseDrawable">@drawable/arrow_left_dart</item>
          <item name="android:actionBarStyle">@style/MyActionBar</item>-->

    </style>

    <!--dim：昏暗 1 黑 Theme.AppCompat.Light.Dialog.Alert -->
    <style name="ProgressBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="DrawerLayoutTheme" parent="AppTheme">
        <!-- <item name="android:actionBarStyle">@style/DrawerLayoutActionBar</item>-->
        <item name="toolbarStyle">@style/DrawerLayoutActionBar</item>
    </style>

    <!--直接设置给toolbar岂不更好-->
    <style name="DrawerLayoutActionBar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">6dp</item>
    </style>

    <!--直接设置给toolbar岂不更好  Theme.AppCompat 兼容2.2   3.0以上可以用-->
    <!--Also notice that this theme includes two definitions for the windowActionBarOverlay style:
  one with the android: prefix and one without.
  The one with the android: prefix is for versions of Android that include the style in the platform
  and the one without the prefix is for older versions that read the style from the Support Library.-->
    <!-- ActionBar styles Widget.AppCompat.Light.ActionBar.Solid.Inverse -->
    <style name="Test001" parent="Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/TestToolBarStyle2</item>
        <item name="windowActionBarOverlay">true</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="TestToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/app_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/green</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TestToolBarStyle2" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">#44000000</item>
        <!-- <item name="android:background">@color/transparent_black</item>-->

        <!-- Support library compatibility -->
        <item name="background">@color/accentLight</item>
    </style>

</resources>
